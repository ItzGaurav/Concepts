@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/JavaScript/AngularJS.js"></script>
    <script src="~/JavaScript/app.js"></script>
      <style>
        table {
            border-collapse: collapse;
            font-family: Arial;
        }

        td {
            border: 1px solid black;
            padding: 5px;
        }

        th {
            border: 1px solid black;
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body ng-app="myModule">
    <div>
         <center>
        <div ng-controller="myController">
            <table>
                <tr>
                    <td>First Name : </td>
                    <td>
                        <input type="text" ng-model="employee.Name" required/>
                    </td>
                </tr>
                <tr>
                    <td>Gender : </td>
                    <td>
                        <input type="text" ng-model="employee.Gender" required/></td>
                </tr>
                <tr>
                    <td>Salary : </td>
                    <td>
                        <input type="text" ng-model="employee.Salary" required/></td>
                </tr>
            </table>
            <br/>
            <input type="button" ng-click="saveData(employee)" value="Save"/>
        </div>
    </center>
    </div>
</body>
</html>
